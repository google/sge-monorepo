FROM debian:stable-slim

RUN apt-get update && apt-get -y install bash python python-dev python-pip openssl libssl-dev

RUN pip2 install --upgrade pip setuptools wheel
RUN pip2 install --upgrade p4python

COPY . /app
WORKDIR /app

CMD ["python"]